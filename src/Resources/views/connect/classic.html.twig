<form method="post"
      name="telecash-connect-classic-form"
      action="https://test.ipg-online.com/connect/gateway/processing">
    <input type="hidden" name="txntype" value="sale"/>
    <input type="hidden" name="timezone" value="Europe/Berlin"/>
    <input type="hidden" name="txndatetime" value="{{ dateTime }}"/>
    <input type="hidden" name="hash_algorithm" value="SHA256"/>
    <input type="hidden" name="hash" value="{{ hash }}"/>
    <input type="hidden" name="storename" value="<Shurkhamp store ID>"/>
    <input type="hidden" name="mode" value="payonly"/>
    <input type="hidden" name="paymentMethod" value="M"/>
    {#<input type="hidden" name="checkoutoption" value="classic"/>Uncomment this and comment the line above to let customer choose the payment method#}
    <input type="text" name="chargetotal" value="13.00"/>
    <input type="hidden" name="currency" value="978"/>
    <input type="hidden" name="language" value="en_US"/>
    <input type="hidden" name="responseSuccessURL" value="<Url for Success>">
    <input type="hidden" name="responseFailURL" value="<Url for error page>">
    <input type="submit" value="Submit">
</form>